<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/rL_Accelerometer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:paddingBottom="15dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direction"
            android:layout_marginLeft="50pt"
            android:paddingBottom="15dp"
            android:id="@+id/direction"
            style="@style/Widget.AppCompat.Button.Colored"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liste de capteurs"
            android:layout_marginLeft="50pt"
            android:paddingBottom="15dp"
            android:id="@+id/liste_capteurs"
            style="@style/Widget.AppCompat.Button.Colored"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor Proximité"
            android:layout_marginLeft="50pt"
            android:paddingBottom="15dp"
            android:id="@+id/proximite"
            style="@style/Widget.AppCompat.Button.Colored"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerometre flash"
            android:layout_marginLeft="50pt"
            android:paddingBottom="15dp"
            android:id="@+id/flash"
            style="@style/Widget.AppCompat.Button.Colored"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="présence/absence de capteurs"
            android:layout_marginLeft="30pt"
            android:paddingBottom="15dp"
            android:id="@+id/abs_pres_capteur"
            style="@style/Widget.AppCompat.Button.Colored"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accélérometre backouground Color"
            android:layout_marginLeft="20pt"
            android:paddingBottom="15dp"
            android:id="@+id/acceleromtre_bg_color"
            style="@style/Widget.AppCompat.Button.Colored"/>
    </LinearLayout>



</RelativeLayout>